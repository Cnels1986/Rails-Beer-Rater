<% provide(:title, "Breweries") %>
<h1>Discover Breweries</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.id %></td>
        <td><%= link_to brewery.name.split.map(&:capitalize)*' ', brewery %></td>
      </tr>
    <% end %>
  </tbody>
</table>
