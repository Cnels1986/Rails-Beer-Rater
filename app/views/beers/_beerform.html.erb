<%= form_with(model: beer, local: true) do |form| %>
<div class="field">
  <%= form.label :beer_name %>
  <%= form.text_field :name, id: :beer_name, placeholder: 'Beer Name'%>
</div>

<div class="field">
  <%= form.label :brewery_id %>
  <%= form.text_field :brewery_name, placeholder: 'Brewery Name' %>
</div>

<div class="field">
  <%= form.label :beer_type %>
  <%= form.text_field :beer_type, id: :beer_beer_type, placeholder: 'Type of Beer' %>
</div>

<div class="actions">
  <%= form.submit "Add Beer", class: "button"  %>
</div>

<% end %>
