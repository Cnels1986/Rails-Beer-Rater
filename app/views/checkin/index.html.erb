<% provide(:title, "Checkins") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        What's Everyone Drinking?
      </h1>
    </section>
  </aside>

  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>User</th>
        <th>Name</th>
        <th>Brewery</th>
        <th>Location</th>
        <th>Beer type</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @checkin.each do |checkin| %>
        <tr>
          <td class="pic">
              <%= image_tag checkin.picture.url if checkin.picture? %>
          </td>
          <td><%= link_to checkin.user.name.split.map(&:capitalize)*' ', checkin.user %></td>
          <td><%= link_to checkin.beer.name.split.map(&:capitalize)*' ', checkin.beer %></td>
          <td><%= link_to checkin.beer.brewery.name.split.map(&:capitalize)*' ' , checkin.beer.brewery%></td>
          <td><%= checkin.location.name.split.map(&:capitalize)*' ' if checkin.location %></td>
          <td><%= checkin.beer.beer_type.split.map(&:capitalize)*' ' %></td>
          <td><%= checkin.rating %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
