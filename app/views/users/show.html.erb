<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>'s Checkins
      </h1>
      <div>
        <%= link_to "Edit Profile", edit_user_path(current_user) %>
      </div>
    </section>
  </aside>

  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Name</th>
        <th>Brewery</th>
        <th>Location</th>
        <th>Beer type</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @beers.each do |beer| %>
        <tr>
          <td class="pic">
              <%= image_tag beer.picture.url if beer.picture? %>
          </td>
          <td><%= beer.name %></td>
          <td><%= beer.brewery.name %></td>
          <td><%= beer.location.name %></td>
          <td><%= beer.beer_type %></td>
          <td><%= beer.rating %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <%= will_paginate @beers%>
</div>
