<% provide(:title, "Beers") %>
<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>User</th>
      <th>Name</th>
      <th>Brewery</th>
      <th>Location</th>
      <th>Beer type</th>
      <th>Rating</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.id %></td>
        <td><%= beer.user_id %></td>
        <td><%= beer.name %></td>
        <td><%= beer.brewery.name %></td>
        <td><%= beer.location.name %></td>
        <td><%= beer.beer_type %></td>
        <td><%= beer.rating %></td>
      </tr>
    <% end %>

  </tbody>
</table>
